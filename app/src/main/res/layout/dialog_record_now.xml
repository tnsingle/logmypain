<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogSlideAnim"
    android:id="@+id/recordNowContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center" >
    <TableRow
	    android:background="#555555"
	    android:textColor="#fff"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
   		android:padding="3dip">
       	<TextView
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_width="0dip" 
		    android:layout_weight="1"
			android:textSize="16sp"
		    android:text="Migraine Recorded!"
		    android:textColor="#fff"/>
   	</TableRow>
   	<TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
   		android:padding="5dip"
    	android:background="#ccc">
       	<LinearLayout 
    		android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
     		android:layout_width="0dip"
    		android:layout_gravity="center_vertical">
			<TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:id="@+id/recordDialogDay"
			     android:gravity="center"
			    android:textAllCaps="true" />
			<TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:id="@+id/recordDialogTime"
			     android:gravity="center"
			    android:textSize="20sp" 
			    android:textStyle="bold"/>
		</LinearLayout> 
	    <Button 
		    android:layout_height="wrap_content"
		    android:background="@drawable/primary_button"
		    android:clickable="true"
		    android:onClick="onClickEdit"
		    android:text="Edit"
		    android:layout_width="0dip" android:layout_weight=".4"
		    android:layout_marginTop="2dp"
		    android:layout_marginBottom="2dp"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"/>
    
	    <Button 
		    android:layout_height="wrap_content"
		    android:background="@drawable/secondary_button"
		    android:clickable="true"
		    android:onClick="onClickUndo"
		    android:text="Undo"
		    android:layout_width="0dip" android:layout_weight=".2"
		    android:layout_marginTop="2dp"
		    android:layout_marginBottom="2dp"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"/>

	</TableRow>
</TableLayout>
