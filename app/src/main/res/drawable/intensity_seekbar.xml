<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background" >
      <shape>
        <corners
            android:radius="50dip" />
        <size android:height="3dip" /><gradient
            android:startColor="#888"
            android:centerColor="#bbb"
            android:centerX=".98"
            android:endColor="#ddd"
            android:angle="180" />
    </shape>
</item>
<item android:id="@android:id/progress" >
        <clip android:clipOrientation="horizontal" android:gravity="left" >
    <shape>
        <corners
            android:radius="50dip" />
        <size android:height="3dip" />
        <gradient
            android:startColor="#ed1207"
            android:centerColor="#ffa10a"
            android:centerX="0.98"
            android:endColor="#fcf407"
            android:angle="180" />
    </shape>
    </clip>
</item>
     
</layer-list>