<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    <style name="Widget.Styled.ActionBar" 
    parent="@style/Widget.AppCompat.Light.ActionBar">
    <item name="android:logo">@drawable/ic_logo_logmypain</item>
    <item name="android:background">#cccccc</item>
    <item name="android:displayOptions">showHome|useLogo</item>
    <item name="displayOptions">showHome|useLogo</item>
</style>
    <style name="QuickButton" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
    </style>
    
<style name="PrimaryButton" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
<style name="ModifyFormLabel" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="ModifyPrimaryInfo" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
    </style>
    <style name="ModifySecondaryInfo" parent="ModifyPrimaryInfo">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditButton" parent="AppTheme">
        <item name="android:layout_width">25dp</item>
	    <item name="android:layout_height">25dp</item>
	    <item name="android:src">@drawable/ic_action_edit</item>
	    <item name="android:gravity">right</item>
	    <item name="android:background">@null</item>
     	<item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">Edit</item>
    </style>
    <style name="DeleteButton" parent="AppTheme">
        <item name="android:layout_width">85dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableLeft">@drawable/ic_action_remove</item>
	    <item name="android:layout_gravity">bottom</item>
	    <item name="android:background">@null</item>
     	<item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">Delete</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="EditButtonSM" parent="EditButton">
        <item name="android:layout_width">25dp</item>
	    <item name="android:layout_height">25dp</item>
	    <item name="android:src">@drawable/ic_action_edit</item>
    </style>
    <style name="DeleteButtonSM" >
        <item name="android:layout_width">25dp</item>
	    <item name="android:layout_height">25dp</item>
	    <item name="android:src">@drawable/ic_action_remove</item>
	    <item name="android:gravity">right</item>
	    <item name="android:background">@null</item>
     	<item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">Edit</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
</style>
<style name="DialogSlideAnim">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:windowBackground">@null</item>
	    <item name="android:windowNoTitle">true</item>
        <item name="android:animateLayoutChanges">true</item> 
    </style>
    <style name="ClickableText">
        <item name="android:textColor">#ff007f</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
